<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--

        Main page content

        -->


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start"
            android:background="#42A5F5"
            android:weightSum="1">

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="170dp">
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/menu_banner"
                    android:scaleType="fitXY" />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:id="@+id/myAccountImage"
                        android:src="@drawable/empty_user_round"
                        android:layout_gravity="center"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentStart="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/username"
                        android:id="@+id/myAccountUsernameTV"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:layout_marginStart="90dp"
                        android:layout_marginTop="100dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="30sp"
                        android:layout_alignParentStart="true"/>

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/uploadUserAccountPic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_upload_image"
                        android:tint="@android:color/white"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="10dp"/>
                </RelativeLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/firstNameText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/first_name"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#FFFFFF" />
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:layout_weight="1"
                        android:ems="6"
                        android:id="@+id/myAccountFirstNameET"
                        android:hint="@string/first_name"
                        android:layout_gravity="center_horizontal"
                        android:textColorHint="#ffffff"
                        android:backgroundTint="#ffffff"
                        android:textColor="#ffffff" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/lastNameText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/last_name"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#FFFFFF" />
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:layout_weight="1"
                        android:ems="6"
                        android:id="@+id/myAccountLastNameET"
                        android:hint="@string/last_name"
                        android:layout_gravity="center_horizontal"
                        android:textColorHint="#ffffff"
                        android:backgroundTint="#ffffff"
                        android:textColor="#ffffff" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/emailText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/email_short"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#FFFFFF" />
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:layout_weight="1"
                        android:ems="4"
                        android:id="@+id/myAccountEmailET"
                        android:hint="@string/email"
                        android:layout_gravity="center_horizontal"
                        android:textColorHint="#ffffff"
                        android:backgroundTint="#ffffff"
                        android:textColor="#ffffff" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/matricNoText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/matricno"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#FFFFFF" />
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:layout_weight="1"
                        android:ems="6"
                        android:id="@+id/myAccountMatricNoET"
                        android:hint="@string/matricno"
                        android:layout_gravity="center_horizontal"
                        android:textColorHint="#ffffff"
                        android:backgroundTint="#ffffff"
                        android:textColor="#ffffff" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/accountTypeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/account"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#FFFFFF" />
                    <Spinner
                        android:id="@+id/myAccountAccountTypeSpinner"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:prompt="@string/account"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#ffffff"
                        android:spinnerMode="dropdown"
                        android:dropDownSelector="#ffffff"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/update"
                        android:id="@+id/myAccountUpdateButton"
                        android:onClick="updateAccount"
                        android:layout_gravity="center_horizontal"
                        android:background="#43bb36"
                        android:textColor="#ffffff"
                        android:layout_marginBottom="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/cancel"
                        android:id="@+id/myAccountCanceltButton"
                        android:onClick="cancelEditAccount"
                        android:layout_gravity="center_horizontal"
                        android:background="#ab2626"
                        android:textColor="#ffffff"
                        android:layout_marginBottom="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <!--

        Start of Drawer Code

        -->

        <LinearLayout
            android:id="@+id/left_drawer"
            android:layout_width="304dp"
            android:layout_height="match_parent"
            android:layout_gravity="left|start"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="120dp">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/menu_banner"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/menuUserPicture"
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="User Picture"
                        android:paddingStart="10dp"
                        android:src="@drawable/empty_user_round" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/menuUsersName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/users_name"
                            android:textAlignment="textStart"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="#FAFAFA" />

                        <TextView
                            android:id="@+id/menuMatricNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/matric_no"
                            android:textAlignment="textStart"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#BFFAFAFA" />
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>


            <Button
                android:id="@+id/menuHome"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:drawablePadding="10dp"
                android:drawableStart="@mipmap/ic_menu_home"
                android:paddingStart="10dp"
                android:text="@string/home"
                android:textAlignment="textStart"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000000" />

            <Button
                android:id="@+id/menuMyAccount"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:drawablePadding="10dp"
                android:drawableStart="@mipmap/ic_menu_my_account"
                android:paddingStart="10dp"
                android:text="@string/my_account"
                android:textAlignment="textStart"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000000" />

            <Button
                android:id="@+id/menuMyBookings"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:drawablePadding="10dp"
                android:drawableStart="@mipmap/ic_menu_my_bookings"
                android:paddingStart="10dp"
                android:text="@string/my_bookings"
                android:textAlignment="textStart"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/menuSearchHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/search"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <LinearLayout
                android:id="@+id/menyLinearLayoutSearchOptions"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/menuSearchRoomCodeFAB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_search_id"
                        android:tint="@android:color/white" />

                    <TextView
                        android:id="@+id/menuSearchRoomCodeTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/search_room_code"
                        android:textAlignment="center"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/menuSearchTimeDateFAB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_search_time_date"
                        android:tint="@android:color/white" />

                    <TextView
                        android:id="@+id/menuSearchTimeDateTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/search_time_date"
                        android:textAlignment="center"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/menuSearchAdvancedFAB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_adv_search"
                        android:tint="@android:color/white" />

                    <TextView
                        android:id="@+id/menuSearchAdvancedTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/advanced_search"
                        android:textAlignment="center"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.DrawerLayout>
</LinearLayout>